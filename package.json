{
  "name": "coda-hsluv",
  "version": "12.0.0",
  "description": "A comprehensive Coda Pack for HSLuv color space conversions, accessibility analysis, and color manipulation",
  "main": "pack.ts",
  "scripts": {
    "test": "mocha --require ts-node/register --extensions ts,tsx 'test/**/*.ts'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "coda:build": "coda build pack.ts",
    "coda:build:watch": "coda build pack.ts --watch",
    "coda:validate": "coda validate pack.ts",
    "coda:upload": "coda upload pack.ts",
    "coda:release": "coda release pack.ts",
    "coda:whoami": "coda whoami",
    "coda:clean": "rm -rf .coda-pack.json bundle.js bundle.js.map"
  },
  "author": "Rami Isaac <https://github.com/ramiisaac>",
  "license": "ISC",
  "dependencies": {
    "@codahq/packs-sdk": "^1.9.9",
    "hsluv": "^1.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.12",
    "@types/chai-as-promised": "^7.1.7",
    "@types/content-disposition": "^0.5.8",
    "@types/jsrsasign": "^10.5.12",
    "@types/luxon": "^3.4.2",
    "@types/mime-types": "^2.1.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.18",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/experimental-utils": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-ban": "^1.6.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "json-schema": "^0.4.0",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": true,
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
